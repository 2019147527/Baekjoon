#include<iostream>
#include<algorithm>
#include<string>
#include<vector>
using namespace std;

int main() {
	cin.tie(NULL);
	int n;
	
	cin >> n;
	pair<int, int> arr[500050];
	for (int i = 0; i < n; i++) {
		int data;
		cin >> data;
		arr[i].first = data;
		arr[i].second = i;
	}
	sort(arr, arr + n);


	int count = 0;
	for (int i = 0; i < n; i++) {
		if (arr[i].second - i > count) {
			count = arr[i].second - i;
		}
	}
	cout << count + 1;
	return 0;
}
